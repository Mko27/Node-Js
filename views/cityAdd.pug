doctype html
html 
  include head.pug
script(src='https://code.jquery.com/jquery-2.1.1.min.js' type='text/javascript')
link(href='https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/css/select2.min.css' rel='stylesheet')
script(src='https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.1/js/select2.min.js')
style
  include ../public/stylesheets/style.css
form.container(action='/cities/' method='post' id="add")
  label City name
  br
  input.input-value(type='text' name='name')
  br
  label Region
  br
  select(name='RegionId' id="select-state")
    option()
    each region, idx in __regions ? __regions : []
      option(value=region.dataValues.id) #{region.dataValues.name}
  br
  input(type='submit' value='Add')
  br
  pre #{msg}

script.
    $(document).ready(function () {
        $("select").select2();
    });
    