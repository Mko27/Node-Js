head
  title User Registration
h1 Register
form(action='/users/' method='post')
  label Name
  br
  input(type='text' name='name')
  br
  label Surname
  br
  input(type='text' name='surname')
  br
  label Email
  br 
  input(type='text' name='email')
  br
  label Phone number
  br
  input(type="text" name='phone')
  br 
